	<Class Name = "BuffModifier" Inherit = "Modifier">		
		<Field Name = "isBuff" Type = "bool" Desc = "是否为增益魔法" />			
    </Class>

	<!-- 属性描述 -->
    <Class Name = "Property">
        <Field Name = "type" Type = "PropertyType" Desc = "属性类型" />
        <Field Name = "value" Type = "float" Desc = "修改量" />
    </Class>
	<!-- 状态描述 -->
    <Class Name = "State">
        <Field Name = "type" Type = "StateType" Desc = "状态类型" />
        <Field Name = "value" Type = "StateValue" Desc = "状态值:三种值" />
    </Class>
	<!-- 状态值 -->
	<Enum Name="StateValue">
		<Item Name = "MODIFIER_STATE_VALUE_NONE" Value = "0" Desc = "状态不存在" />
		<Item Name = "MODIFIER_STATE_VALUE_ENABLE" Value = "1" Desc = "激活状态" />
		<Item Name = "MODIFIER_STATE_VALUE_DISABLE" Value = "2" Desc = "禁用状态" />
	</Enum>
	<!-- 属性类别 -->
	<Enum Name="PropertyType">
        <Item Name = "MODIFIER_PROP_NONE " Value = "0" Desc = "无修改" />
        <Item Name = "MODIFIER_PROP_MANA_BONUS " Value = "1" Desc = "修改魔量" />
        <Item Name = "MODIFIER_PROP_HEALTH_BONUS" Value = "2" Desc = "修改血量" />
    </Enum>
	<!-- 状态类别 -->
    <Enum Name="StateType">
        <Item Name = "MODIFIER_STATE_NONE " Value = "0" Desc = "无状态" />
        <Item Name = "MODIFIER_STATE_INVISIBLE " Value = "1" Desc = "隐身状态" />
        <Item Name = "MODIFIER_STATE_INVULNERABLE " Value = "2" Desc = "无敌状态" />
    </Enum>
	


