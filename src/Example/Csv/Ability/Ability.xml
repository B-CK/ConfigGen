	<!-- 单位阵营 -->
    <Enum Name="UnitTeam" IsFlags="true">
	    <Item Name = "TEAM_EVERYTHING" Value = "-1" Desc = "中立队伍(属于任意一方)" />    
        <Item Name = "TEAM_NONE" Value = "0" Desc = "无(默认)" />    
        <Item Name = "TEAM_ENEMY" Value = "1" Desc = "敌方队伍" />
        <Item Name = "TEAM_FRIENDLY" Value = "2" Desc = "友方队伍" />
    </Enum>
	<!-- 单位状态标签:后续可扩展多种 -->
    <Enum Name = "UnitFlag" IsFlags="true">
        <Item Name = "FLAG_NONE" Value = "0" Desc = "无" />
        <Item Name = "FLAG_DEAD" Value = "1" Desc = "已死亡" />
        <Item Name = "FLAG_INVULNERABLE" Value = "2" Desc = "无敌" />
        <Item Name = "FLAG_NO_INVIS" Value = "4" Desc = "不是隐形的" />
        <Item Name = "FLAG_NOT_ATTACK_IMMUNE" Value = "8" Desc = "不是攻击免疫" />
        <Item Name = "FLAG_NOT_CREEP_HERO" Value = "16" Desc = "不是野怪" />
        <Item Name = "FLAG_NOT_DOMINATED" Value = "32" Desc = "不可控制的" />
        <Item Name = "FLAG_NOT_SUMMONED" Value = "64" Desc = "非召唤的" />
        <Item Name = "FLAG_PLAYER_CONTROLLED" Value = "128" Desc = "玩家控制的" />
    </Enum>
    
</Namespace>