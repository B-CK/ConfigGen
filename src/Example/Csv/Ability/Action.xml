<Namespace Name = "Ability">
	<!-- 行为基类 -->
	<Class Name = "Action">
		<Field Name = "name" Type = "string" Desc = "名称" />
	</Class> 
	<Class Name = "ActionWithTarget" Inherit="Action">
		<Field Name = "target" Type = "Target" Desc = "目标" />
	</Class> 
	<Class Name = "ApplyModifier" Inherit = "ActionWithTarget">
        <Field Name = "modifier" Type = "string" Desc = "修饰器名称" />
    </Class>
    <Class Name = "PlayAnimation" Inherit = "ActionWithTarget">
        <Field Name = "clip" Type = "string" Desc = "动作名称" />
    </Class>
    <Class Name = "PlaySound" Inherit = "ActionWithTarget">
        <Field Name = "sound" Type = "string" Desc = "声效名称" />程序给定默认节点(腰)播放即可
    </Class>
    <Class Name = "PlayEffect" Inherit = "ActionWithTarget">
        <Field Name = "effectName" Type = "string" Desc = "特效名称" />
        <Field Name = "attachType" Type = "AttachType" Desc = "绑定坐标系类型,可以是单位某节点,也可是世界坐标系" />
		<Field Name = "point" Type = "Common.Vector3" Desc = "坐标点,如有指定节点则为该节点局部坐标.如果是世界坐标系则为世界坐标.亦可自定义坐标系" />
    </Class>
    <Class Name = "AttachEffect" Inherit = "ActionWithTarget">
		<Field Name = "effectName" Type = "string" Desc = "特效名称" />
        <Field Name = "attachType" Type = "AttachType" Desc = "绑定坐标系类型" />
		<Field Name = "point" Type = "Common.Vector3" Desc = "偏移量" />	
    </Class>
    <Class Name = "LinearProjectile" Inherit = "Action">
        <Field Name = "effectName" Type = "string" Desc = "特效名称" />
        <Field Name = "moveSpeed" Type = "float" Desc = "移动速度" />
        <Field Name = "distance" Type = "float" Desc = "可移动距离:可转化成时间去做定时计算" />
        <Field Name = "endTarget" Type = "Target" Desc = "结束目标:抵达该类型目标则结束" />
    </Class>
	<Class Name = "DelayedAction" Inherit = "Action">
        <Field Name = "delay" Type = "float" Desc = "延迟时间" />
    </Class>
	
    <Class Name = "TrackingProjectile" Inherit = "ActionWithTarget">
        <Field Name = "effectName" Type = "string" Desc = "特效名称" />
        <Field Name = "MoveSpeed" Type = "float" Desc = "移动速度" />
        <Field Name = "TrackNode" Type = "string" Desc = "绑定点" />    
    </Class>    
    <Class Name = "RemoveModifier" Inherit = "ActionWithTarget">
        <Field Name = "Modifier" Type = "string" Desc = "修饰器名称" />
    </Class>
    <Class Name = "Damage" Inherit = "ActionWithTarget">
        <Field Name = "Type" Type = "float" Desc = "伤害值" />
    </Class>    
    <Class Name = "ActOnTargets" Inherit = "ActionWithTarget">
        <Field Name = "Actions" Type = "list:Action" Desc = "操作列表" />    
    </Class>
    
	
	<!-- 特效绑定类型 -->
    <Enum Name="AttachType">
        <Item Name = "NONE" Value = "0" Desc = "默认世界坐标系" />
        <Item Name = "HEAD" Value = "1" Desc = "头部" />
        <Item Name = "LEFT_HAND" Value = "2" Desc = "左手" />      
        <Item Name = "RIGHT_HAND" Value = "3" Desc = "右手" />
        <Item Name = "FOOT" Value = "4" Desc = "脚" />
        <Item Name = "CENTER" Value = "5" Desc = "中心(腰)" />
        <Item Name = "CHEST" Value = "6" Desc = "胸部" />
    </Enum>
</Namespace>